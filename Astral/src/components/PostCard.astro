---
import { slugify, formatDate } from "../js/utils";
import Image from "astro/components/Image.astro";

const { frontmatter, url, tagType } = Astro.props;
const { author, category, date, image, title } = frontmatter;
const Tag = tagType;
---

<article class="card">
  <small>
    <a href={`/category/${slugify(category)}`} class="badge">{category}</a>
  </small>
  <a href={url}>
    <Image
      src={image.src}
      alt={image.alt}
      width={400}
      height={250}
      format="webp"
      class="hero-image"
      quality={100}
    />
  </a>
  <div class="container">
    <Tag class="h2">{title}</Tag>
    <p>
      by <a href={`/author/${slugify(author)}`}>{author}</a>
      {formatDate(date)}
    </p>
  </div>
</article>
